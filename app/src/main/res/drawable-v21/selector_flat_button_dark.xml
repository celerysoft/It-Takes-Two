<?xml version="1.0" encoding="utf-8"?>
<ripple
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:radius="20dp"
    android:color="@color/flat_button_pressed_in_dark_theme"
    >
    <!-- 波纹颜色 -->

    <!-- 背景颜色 -->
    <item>
        <selector>
            <item android:state_enabled="false" android:drawable="@drawable/flat_button_disable_dark"/>
            <item android:drawable="@drawable/flat_button_normal_dark"/>
        </selector>
    </item>

    <!-- 确保波纹不会越界 -->
    <item android:id="@android:id/mask">
        <shape android:shape="rectangle">
            <solid android:color="?android:colorAccent" />
        </shape>
    </item>
</ripple>